<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getJSON"
            android:id="@+id/getJSONButton"
            />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                  android:text="@string/interpretableJSON"
            android:layout_toEndOf="@+id/getJSONButton"
            android:layout_toRightOf="@+id/getJSONButton"
            android:id="@+id/interpretableJSONButton"
            />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clearAll"
            android:id="@+id/clearButton"
            android:layout_toEndOf="@+id/interpretableJSONButton"
            android:layout_toRightOf="@+id/interpretableJSONButton"
            />

    <ListView
              android:id="@android:id/list"
              android:layout_below="@+id/getJSONButton"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            />

</RelativeLayout>
